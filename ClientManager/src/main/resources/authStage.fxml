<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.PasswordField?>


<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="com.example.AuthController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" stylesheets="/Style.css" >
    <VBox fx:id="authWindow" alignment="CENTER" spacing="5" visible="true">
        <TextField fx:id="loginArea" promptText="login" maxWidth="300" minHeight="35"></TextField>
        <PasswordField fx:id="passwordField" promptText="password" maxWidth="300" minHeight="35" onAction="#tryAuthorization" />
        <HBox alignment="CENTER" spacing="5">
            <Button fx:id="btrRegistration" text="Registration" minWidth="150" onAction="#btnToRegWindowAction"></Button>
            <Button fx:id="btnEnter" text="Enter" minWidth="100" onAction="#tryAuthorization"></Button>
        </HBox>

    </VBox>
    <VBox fx:id="regWindow" alignment="CENTER" spacing="5" visible="false">
        <TextField fx:id="loginReg" promptText="enter login" maxWidth="300"></TextField>
        <TextField fx:id="nickReg" promptText="enter nickname" maxWidth="300"></TextField>
        <PasswordField fx:id="passReg" promptText="enter password" maxWidth="300"></PasswordField>
        <HBox alignment="CENTER" spacing="5">
            <Button fx:id = "btnBackReg" text="back" onAction="#btnBackToAuthWindowAction"></Button>
            <Button fx:id="btnTryRegistration" text="Registration" onAction="#btnRegistrationAction"></Button>
        </HBox>


    </VBox>

</VBox>
